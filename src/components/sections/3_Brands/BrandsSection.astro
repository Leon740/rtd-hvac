---
import DATA from './brandsData.json';
import SectionHeader from '@components/global/SectionHeader.astro';
import Img from '@components/global/Img.astro';
import { Button } from '@components/global/Button';

interface Props {
  hasLink?: boolean;
}

const { hasLink = false } = Astro.props;
---

<div class="container section-pt-128-flex-64">
  <SectionHeader data={DATA.header} />

  <ul class="bg-white flex flex-row flex-wrap">
    {
      DATA.images.map((img) => (
        <li class="p-16 flex-center w-1/4 md:w-[12.5%]">
          <Img src={img} alt="RTD HVAC Brands" className="w-full" width={152} height={100} />
        </li>
      ))
    }
  </ul>

  {hasLink ? <Button style="Secondary" href={DATA.button.href} label={DATA.button.label} /> : null}
</div>
