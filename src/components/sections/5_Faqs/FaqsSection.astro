---
import FAQS_DATA from './faqsData.json';
import SectionHeader from '@partials/SectionHeader.astro';
import { FaqsTabs, type TTabKey } from './FaqsTabs/FaqsTabs';

interface IFaqsSection {
  activeTabKey?: TTabKey;
}

const { activeTabKey } = Astro.props as IFaqsSection;
---

<div class="section-pt-128">
  <SectionHeader img={FAQS_DATA.img} title={FAQS_DATA.title} paragraph={FAQS_DATA.paragraph} />

  <div class="container">
    <div id="faqsTabsHeaderScrollIntoView"></div>
    <FaqsTabs tabs={FAQS_DATA.tabs} activeTabKey={activeTabKey} client:load />
  </div>
</div>
