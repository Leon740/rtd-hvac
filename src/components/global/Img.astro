---
import { Image } from 'astro:assets';

interface IImgProps {
  src: string;
  alt: string;
  className?: string;
  width: number;
  height: number;
}

const { src, alt, className = '', width, height } = Astro.props as IImgProps;

const imgSrc = `/images/${src}`;
---

<Image src={imgSrc} alt={alt} class={className} width={width} height={height} />
